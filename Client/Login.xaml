<Window x:Class="Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:myBox="clr-namespace:Client.MyControls"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        Title="登录" 
        Height="400" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
         AllowsTransparency="True" 
        WindowStartupLocation="CenterScreen">
    <Border x:Name="wb" BorderThickness="3" Background="{DynamicResource SkinColor}" BorderBrush="{DynamicResource SkinColor}"  MouseDown="wb_MouseDown">
        <!--<Border.Background>
            <LinearGradientBrush EndPoint="0.8,1" StartPoint="0.33,0">
                <GradientStop Color="#FF50B3E2" Offset="0"/>
                <GradientStop Color="#FF084168" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>-->
        <Border.Clip>
            <GeometryGroup FillRule="Nonzero">
                <RectangleGeometry x:Name="r1" Rect="0,50,800,100"/>
                <RectangleGeometry x:Name="r2" Rect="0,240,800,100"/>
                <RectangleGeometry x:Name="r3" Rect="80,0,90,800"/>
                <RectangleGeometry x:Name="r4" Rect="360,0,100,800"/>
            </GeometryGroup>
        </Border.Clip>
        <Grid x:Name="root">
            <Grid Grid.ColumnSpan="2">
                <!--<Image Source="pack://application:,,,/Common;component/Images/login_bg.png" Stretch="Fill"/>-->
                <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Background="Black" CornerRadius="5" >
                    <Grid>
                        <Label Content="未登录" Foreground="White" Margin="5"/>
                        <pu:DropDown Margin="5" Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Text="Zeoun's"
                                   x:Name="lblCurrUser"
                                   FontWeight="Light"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   Margin="5,0,0,0" />
                                <TextBlock Text="&#xe651;"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   FontFamily="/Resources/#iconfont"
                                   Margin="10,0,0,0" />
                            </StackPanel>
                            <pu:DropDown.Child>
                                <StackPanel  HorizontalAlignment="Center">
                                    <Button  Content="注销登录" pu:ButtonHelper.Icon="&#xf1a0;"  Margin="20" pu:ButtonHelper.ButtonStyle="Link" Tag="{Binding Id}"  Foreground="Blue" x:Name="btnChangePwd"/>
                                </StackPanel>
                            </pu:DropDown.Child>
                        </pu:DropDown>
                    </Grid>
                </Border>
                <Viewport3D Name="World">
                    <Viewport3D.Camera>
                        <PerspectiveCamera Position="0,50,1000" LookDirection="0,2,-1" UpDirection="0,-1,-1" FieldOfView="10000" NearPlaneDistance="10" FarPlaneDistance="8000"/>
                    </Viewport3D.Camera>
                    <Viewport3D.Children>
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <Model3DGroup x:Name="WorldModels">
                                    <AmbientLight Color="#FFFFFFFF" />
                                </Model3DGroup>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                    </Viewport3D.Children>
                </Viewport3D>
            </Grid>
            <!--<myBox:LoginBox Grid.Column="1"/>-->
            <Border  Grid.Column="1" Width="340" HorizontalAlignment="Center" Background="White" Opacity="0.75" Margin="100,20,0,20" >
                <Border.Effect>
                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="1" />
                </Border.Effect>
                <Grid >
                    <StackPanel  VerticalAlignment="Center" Width="280">
                        <StackPanel Orientation="Horizontal" Width="260">
                            <Label Content="登录" FontSize="25" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="登录失败?" FontSize="12" VerticalContentAlignment="Center"/>
                                <Label Content="设置数据" FontSize="12" Foreground="CadetBlue" VerticalContentAlignment="Center" MouseDown="btnDBSetting_Click"/>
                                <Label Content="插件中心" FontSize="12" Foreground="CadetBlue" VerticalContentAlignment="Center" MouseDown="btnPlugins_Click"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <TextBox  Height="30"
                                      Width="260"
                                      x:Name="txtUserName"
                                      Text="admin"
                                      Background="{DynamicResource TextBoxBgColor}"
                                      pu:TextBoxHelper.Watermark="账户"
                                      pu:TextBoxHelper.Icon="&#xf11c;"
                                      pu:TextBoxHelper.FocusedBorderBrush="{DynamicResource TextBoxFocusColor}"
                                      pu:TextBoxHelper.FocusedShadowColor="{DynamicResource TextBoxFocusedShadowColor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <PasswordBox  Height="30"
                                          Width="260"
                                          Password="123456"
                                          x:Name="txtPassword"
                                          Background="{DynamicResource TextBoxBgColor}"
                                          pu:PasswordBoxHelper.Watermark="密码"
                                          pu:PasswordBoxHelper.Icon="&#xf11c;"
                                          pu:PasswordBoxHelper.FocusedBorderBrush="{DynamicResource TextBoxFocusColor}"
                                          pu:PasswordBoxHelper.FocusedShadowColor="{DynamicResource TextBoxFocusedShadowColor}"
                                          pu:PasswordBoxHelper.IsShowPwdButtonVisible="True" />
                        </StackPanel>
                        <Button  Height="30"
                        Margin="0,40,0,10"
                        Content="登 录"
                        pu:ButtonHelper.ClickStyle="Sink"
                        FontFamily="{StaticResource FontAwesome}"
                        Background="{DynamicResource ButtonBgColor}"
                        pu:ButtonHelper.HoverBrush="{DynamicResource ButtonHoverColor}"
                        pu:ButtonHelper.Icon="&#xf21d;" x:Name="btnLogin" Click="btnLogin_Click" />
                        <Label Content="取 消" FontSize="12" Foreground="CadetBlue" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MouseDown="btnExit_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
    <Window.RenderTransform>
        <TransformGroup>
            <RotateTransform x:Name="rt" Angle="0"/>
            <ScaleTransform x:Name="sct" ScaleX="1" ScaleY="1"/>
        </TransformGroup>
    </Window.RenderTransform>
    <Window.Resources>
        <Storyboard x:Key="start">
            <RectAnimation Storyboard.TargetName="r1" Storyboard.TargetProperty="Rect"  
                           Duration="0:0:1" To="0,0,800,800"/>
            <RectAnimation Storyboard.TargetName="r2" Storyboard.TargetProperty="Rect"  
                           Duration="0:0:1" To="20,20,500,700"/>
            <RectAnimation Storyboard.TargetName="r3" Storyboard.TargetProperty="Rect"  
                           Duration="0:0:1" To="85,0,750,600"/>
            <RectAnimation Storyboard.TargetName="r4" Storyboard.TargetProperty="Rect"  
                           Duration="0:0:1" To="0,250,700,600"/>
            <DoubleAnimation Storyboard.TargetName="wb" Storyboard.TargetProperty="Opacity"  
                             From="0.2" To="1" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
</Window>
