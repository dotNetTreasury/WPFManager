<p:BaseMainWindow x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
            xmlns:p="clr-namespace:Common;assembly=Common"  
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
    mc:Ignorable="d"
        d:DesignHeight="900" d:DesignWidth="1600"
        Style="{StaticResource MainWindowStyle}"  
        WindowStyle="None"
        Background="Transparent"
         AllowsTransparency="True" 
            Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <pu:WindowXCaption.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="xx" Width="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Background="Black">
                <Image Margin="20,0,10,0" VerticalAlignment="Center" Width="28" Height="28" Source="pack://application:,,,/Common;component/Images/main_header.png" />
                <TextBlock FontSize="20" 
                       FontWeight="Light"
                       VerticalAlignment="Center"
                       Foreground="White"
                           Text="信息管理系统"
                       x:Name="lblTitle" />
            </StackPanel>
            
            <Border Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnShowMenu" 
                        FontSize="16"
                        Width="28"
                        Height="28"
                        ToolTip="收起/打开导航"
                        pu:ButtonHelper.ButtonStyle="Link"
                        Foreground="Gray"
                        Content="&#xf039;"
                        FontFamily="{StaticResource FontAwesome}"
                        pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center"
                        Margin="10,0,10,0" />
                    <Button  Margin="0,0,10,0"                       
                             FontSize="16"
                             ToolTip="添加插件"
                        Width="28"
                        Height="28"
                         pu:ButtonHelper.ButtonStyle="Link"  
                         FontFamily="{StaticResource FontAwesome}" 
                         pu:ButtonHelper.Icon="&#xf067;" 
                         Foreground="Gray"
                        pu:ButtonHelper.HoverBrush="Black"/>
                    <!--<Border Margin="0,0,20,0" Background="Gray">
                        <pu:DropDown>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock Text="Zeoun's"
                                   x:Name="lblCurrUser"
                                   VerticalAlignment="Center"
                                   Foreground="Black" />
                                <TextBlock Text="&#xe651;"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   FontFamily="/Resources/#iconfont" />
                            </StackPanel>
                            <pu:DropDown.Child>
                                <StackPanel Width="100" HorizontalAlignment="Center">
                                    <Button  Content="修改密码" Margin="0,20,0,0" pu:ButtonHelper.ButtonStyle="Link" Tag="{Binding Id}"  Foreground="Blue" x:Name="btnChangePwd" Click="btnChangePwd_Click"/>
                                </StackPanel>
                            </pu:DropDown.Child>
                        </pu:DropDown>
                    </Border>-->
                </StackPanel>
            </Border>
            <Grid Grid.Column="2">
                <TabControl  x:Name="tabMenu" VerticalAlignment="Stretch"
                                 pu:TabControlHelper.TabControlStyle="Card"
                             pu:TabControlHelper.ItemHeight="50"
                        pu:TabControlHelper.ItemPadding="20,0"
                        pu:TabControlHelper.SelectedForeground="{DynamicResource SkinColor}"
                        pu:TabControlHelper.ItemsAlignment="LeftOrTop">
                </TabControl>
            </Grid>
            <Grid Grid.Column="3">
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <Grid  Margin="10,0,0,0"  VerticalAlignment="Center">
                        <Button  FontSize="16"
                            Width="28"
                            Height="28"
                            ToolTip="邮件"
                            pu:ButtonHelper.ButtonStyle="Link"
                            Foreground="Gray"
                             Content="&#xf003;"
                             FontFamily="{StaticResource FontAwesome}"
                             pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center"/>
                        <pu:Badge HorizontalAlignment="Right" VerticalAlignment="Top"  IsWaving="False" FontSize="8" Width="15" Height="15" Background="Red" />
                    </Grid>
                    <Grid  Margin="10,0,0,0"  VerticalAlignment="Center">
                        <Button  
                        FontSize="16"
                        Width="28"
                        Height="28"
                        ToolTip="消息"
                        pu:ButtonHelper.ButtonStyle="Link"
                        Foreground="Orange"
                        Content="&#xf0a2;"
                        FontFamily="{StaticResource FontAwesome}"
                        pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center"/>
                        <pu:Badge HorizontalAlignment="Right" VerticalAlignment="Top"  IsWaving="False" FontSize="8" Width="15" Height="15" Background="Orange" />
                    </Grid>

                    <Button x:Name="btnSkin" 
                        Click="btnSkin_Click"
                            Margin="10,0,0,0"
                        FontSize="16"
                        Width="28"
                        Height="28"
                        ToolTip="皮肤"
                        pu:ButtonHelper.ButtonStyle="Link"
                        Foreground="Gray"
                        Content="&#xf2b2;"
                        FontFamily="{StaticResource FontAwesome}"
                        pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center"/>
                    <Button FontSize="16"
                        x:Name="btnSetting"
                            Margin="10,0,0,0"
                        Click="btnSetting_Click"
                        Width="28"
                        Height="28"
                        ToolTip="设置"
                        pu:ButtonHelper.ButtonStyle="Link"
                        Content="&#xf085;"
                        FontFamily="{StaticResource FontAwesome}"
                            Foreground="Gray"
                        pu:ButtonHelper.HoverBrush="Black"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>
    </pu:WindowXCaption.Header>
    <Grid>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="gMainMenu" Grid.Row="0" Grid.ColumnSpan="2" Height="0">

            </Grid>
            <!--主导航-->
            <Grid Grid.Row="1" Width="200" Grid.Column="0" x:Name="bSecondMenu" Background="Black">
                <TreeView  x:Name="tvMenu"
                           Margin="0,20,0,0"
                        pu:TreeViewHelper.TreeViewStyle="Modern"
                        pu:TreeViewHelper.ExpandMode="SingleClick"
                           Foreground="White"
                        pu:TreeViewHelper.ExpandBehaviour="OnlyOne"
                         pu:TreeViewHelper.SelectedBackground="Gray"
                           pu:TreeViewHelper.SelectedForeground="White"
                        pu:TreeViewHelper.ItemPadding="3,10,10,10"
                            Background="Black"
                         BorderBrush="{DynamicResource TreeViewSelectedHeaderColor}"
                          PreviewMouseUp="TreeView_PreviewMouseUp">
                    <TreeViewItem pu:TreeViewHelper.ItemIcon="&#xe96d;"
                              Header="Music"
                              IsSelected="True" />
                </TreeView>
            </Grid>
            <!--内页-->
            <Border  Grid.Row="1" Grid.Column="1">
                <Grid Background="#FFF8F5F5">
                    <GridSplitter Width="1" />
                    <Frame x:Name="mainFrame" Source="/Pages/Welcome.xaml" Margin="0,0,0,40"  NavigationUIVisibility="Hidden"/>
                    <Grid VerticalAlignment="Bottom" Background="White" Height="30">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Label Width="28" Height="28" FontSize="16" Foreground="Gray" Margin="10,0,0,0" FontFamily="{StaticResource FontAwesome}" Content="&#xf027;"/>
                            <Label Foreground="Gray" Margin="5,0,0,0" x:Name="lblInfo" Content="等待操作..."/>
                        </StackPanel>
                        <Label Foreground="Gray" Content="zyue-1.0" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</p:BaseMainWindow>
