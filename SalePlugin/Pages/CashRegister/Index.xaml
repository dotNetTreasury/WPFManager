<p:BasePage x:Class="SalePlugin.Pages.CashRegister.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalePlugin.Pages.CashRegister"
      xmlns:p="clr-namespace:Common;assembly=Common"  
      mc:Ignorable="d" 
            xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="首页">
    <Grid>
        <pu:WaterfallPanel>
            <Button  Content="单品收银" x:Name="btnSingle" Click="btnSingle_Click"  Background="{DynamicResource ButtonBgColor}" BorderBrush="{DynamicResource ButtonBorderColor}"  pu:ButtonHelper.HoverBrush="{DynamicResource ButtonHoverColor}"/>
            <Button  Content="订单收银" x:Name="btnOrder" Click="btnOrder_Click"  Background="{DynamicResource ButtonBgColor}" BorderBrush="{DynamicResource ButtonBorderColor}"  pu:ButtonHelper.HoverBrush="{DynamicResource ButtonHoverColor}"/>
        </pu:WaterfallPanel>
    </Grid>
</p:BasePage>
