<p:BasePage x:Class="DemoPlugin.Pages.Test.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoPlugin.Pages.Test"
      xmlns:p="clr-namespace:Common;assembly=Common"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="插件生成">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="如何生成并使用插件：" Height="50" FontSize="20"/>
            <Label Content="1.测试完成时 将项目输出类型 由 【Windows应用程序】 更改为【类库】" FontSize="20"/>
            <Label Content="2.将App.xaml属性中 生成操作由【ApplicationDefinition】更改为【Page】 " FontSize="20"/>
            <Label Content="3.将dll文件加入【Client/bin/Debug/plugins】文件夹下 " FontSize="20"/>
            <Label Content="4.在插件管理中使用该插件 " FontSize="20"/>
        </StackPanel>
    </Grid>
</p:BasePage>
